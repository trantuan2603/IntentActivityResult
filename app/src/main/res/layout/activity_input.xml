<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/size16"
    android:orientation="vertical"
    tools:context="com.landsoft.intentactivityresult.InputActivity">

    <EditText
        android:id="@+id/edt_number_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/input_typer_number_a"
        tools:ignore="TextFields"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/edt_number_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/input_typer_number_b"
        android:inputType="number"
        tools:ignore="TextFields" />


    <Button
        android:id="@+id/btn_send_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/size16"
        android:text="Send Data"
        android:background="@color/colorPrimary"
        tools:ignore="HardcodedText" />

</LinearLayout>
